<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <action name="">
            <result type="chain">
                <param name="actionName">CogerLibros</param>
            </result>
        </action>
    </package>
    
    <package name="verLibros" extends="struts-default">
        <action name="CogerLibros" class="accion.CogerLibros">
            <result name="success">/vista/index.jsp</result>
        </action>
    </package>
    
    <package name="carrito" extends="struts-default">
        <action name="anyadirLibro" class="accion.ComprarLibro">
            <result type="chain">
                <param name="actionName">CogerLibros</param>
            </result>
        </action>
        
        <action name="comprarLibros" class="accion.ComprarLibro" method="comprarLibros" >
            <result name="comprar">/vista/compra.jsp</result>
        </action>
    </package>
   
</struts>
